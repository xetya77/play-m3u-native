<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player_bg">

    <!-- ExoPlayer View -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ===== BUFFERING / STATUS ===== -->
    <LinearLayout
        android:id="@+id/layout_buffering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/accent" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memuat..."
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_status_pill" />
    </LinearLayout>

    <!-- ===== OSD BOTTOM - Channel Info ===== -->
    <LinearLayout
        android:id="@+id/osd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_osd"
        android:paddingTop="40dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="20dp"
        android:visibility="gone">

        <!-- Channel Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Logo -->
            <ImageView
                android:id="@+id/iv_channel_logo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="fitCenter"
                android:padding="6dp"
                android:background="@drawable/bg_channel_logo" />

            <!-- Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="14dp">

                <!-- Nomor + Nama -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_channel_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/accent"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:paddingEnd="10dp" />

                    <TextView
                        android:id="@+id/tv_channel_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nama Channel"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Group -->
                <TextView
                    android:id="@+id/tv_channel_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_muted"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Channel List Button -->
            <TextView
                android:id="@+id/btn_channel_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‰¡"
                android:textColor="@color/accent"
                android:textSize="28sp"
                android:paddingHorizontal="8dp"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>

        <!-- Hint navigasi -->
        <TextView
            android:id="@+id/tv_nav_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â†‘â†“ ganti channel  â€¢  â† daftar saluran  â€¢  BACK kembali"
            android:textColor="@color/text_muted"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- ===== CHANNEL LIST PANEL (slide dari kiri) ===== -->
    <View
        android:id="@+id/ch_list_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ch_list_panel"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_card2"
        android:translationX="-300dp"
        android:elevation="8dp">

        <!-- Panel Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@color/bg_card">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tv_panel_playlist_name"
                android:text="Semua Saluran"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_close_panel"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="âœ•"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>

        <!-- Search di panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_channel_logo"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="12sp"
                android:paddingEnd="6dp" />

            <EditText
                android:id="@+id/et_panel_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Cari saluran..."
                android:hintTextColor="@color/text_muted"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:background="@null"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>

        <!-- Group Tabs di panel -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_panel_groups"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:orientation="horizontal"
            android:clipToPadding="false" />

        <!-- Channel List di panel -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_panel_channels"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Swipe feedback -->
    <TextView
        android:id="@+id/swipe_up_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp"
        android:text="â¬† Channel Selanjutnya"
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@drawable/bg_status_pill"
        android:visibility="gone" />

    <TextView
        android:id="@+id/swipe_down_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:text="â¬‡ Channel Sebelumnya"
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@drawable/bg_status_pill"
        android:visibility="gone" />

</FrameLayout>
