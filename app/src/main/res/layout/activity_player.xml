<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- ExoPlayer surface -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Buffering overlay -->
    <LinearLayout
        android:id="@+id/layout_buffering"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#aa000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#3a7bd5"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memuat..."
            android:textColor="#ccffffff"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/bg_loading_pill"/>
    </LinearLayout>

    <!-- OSD (bottom bar) -->
    <LinearLayout
        android:id="@+id/osd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_osd"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <!-- Channel logo -->
        <ImageView
            android:id="@+id/iv_channel_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_ch_logo"
            android:padding="4dp"
            android:layout_marginRight="12dp"/>

        <!-- Channel info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_channel_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accent2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/tv_channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_channel_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99ffffff"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Channel list button -->
        <TextView
            android:id="@+id/btn_channel_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰ Saluran"
            android:textColor="@color/accent2"
            android:textSize="13sp"
            android:background="@drawable/bg_accent_rounded"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>
    </LinearLayout>

    <!-- Backdrop for channel panel -->
    <View
        android:id="@+id/ch_list_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"/>

    <!-- Channel list panel (slides from left) -->
    <LinearLayout
        android:id="@+id/ch_list_panel"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:background="#f70a1628"
        android:elevation="8dp"
        android:visibility="gone">

        <!-- Panel header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_panel_playlist_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/accent2"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/btn_close_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✕"
                    android:textColor="#99ffffff"
                    android:textSize="18sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>
            </LinearLayout>

            <!-- Search -->
            <EditText
                android:id="@+id/et_panel_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Cari saluran..."
                android:textColor="@color/text_white"
                android:textColorHint="#66ffffff"
                android:textSize="13sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@drawable/bg_search"
                android:inputType="text"
                android:singleLine="true"/>
        </LinearLayout>

        <!-- Group tabs -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_panel_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"/>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#14ffffff"/>

        <!-- Channel list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_panel_channels"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Swipe feedback up -->
    <TextView
        android:id="@+id/swipe_up_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="60dp"
        android:text="⬆"
        android:textSize="32sp"
        android:textColor="#ccffffff"
        android:visibility="gone"/>

    <!-- Swipe feedback down -->
    <TextView
        android:id="@+id/swipe_down_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="60dp"
        android:text="⬇"
        android:textSize="32sp"
        android:textColor="#ccffffff"
        android:visibility="gone"/>

</FrameLayout>
