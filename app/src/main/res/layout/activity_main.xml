<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <!-- ===== PAGE WELCOME ===== -->
    <LinearLayout
        android:id="@+id/page_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_card"
            android:padding="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAY M3U."
                android:textColor="@color/text_white"
                android:textSize="28sp"
                android:letterSpacing="0.03"
                android:layout_marginBottom="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi ini hanya untuk memutar siaran IPTV.\nBelum ada channel di dalamnya.\nTambahkan playlist M3U Anda untuk mulai menonton."
                android:textColor="@color/text_desc"
                android:textSize="11sp"
                android:lineSpacingMultiplier="1.7"
                android:gravity="center"
                android:layout_marginBottom="28dp"/>

            <TextView
                android:id="@+id/btn_welcome_add"
                android:layout_width="230dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="Tambah\nPlaylist M3U"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.3"
                android:background="@drawable/bg_welcome_btn"
                android:focusable="true"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== PAGE SOURCE ===== -->
    <LinearLayout
        android:id="@+id/page_source"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@color/bg_card2">
            <TextView
                android:id="@+id/btn_source_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â† Kembali"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:focusable="true"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambahkan\nplaylist"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/source_url_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/selector_source_item">
            <View
                android:id="@+id/checkbox_url"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_checkbox_empty"
                android:layout_marginRight="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M3U playlist from URL"
                android:textColor="@color/text_white"
                android:textSize="14sp"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider"/>

        <LinearLayout
            android:id="@+id/source_file_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/selector_source_item">
            <View
                android:id="@+id/checkbox_file"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_checkbox_empty"
                android:layout_marginRight="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M3U playlist from\nstorage/USB"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.4"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="24dp"
            android:background="@drawable/bg_note_box">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="catatan:"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="14dp"/>
            <TextView
                android:id="@+id/tv_source_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih sumber playlist M3U Anda."
                android:textColor="@color/text_desc"
                android:textSize="12sp"
                android:lineSpacingMultiplier="1.7"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== PAGE URL ===== -->
    <LinearLayout
        android:id="@+id/page_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@color/bg_card2">
            <TextView
                android:id="@+id/btn_url_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â† Kembali"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:focusable="true"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan\nplaylist"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="right"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M3U playlist URL"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/et_url"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="https://contoh.com/siaran"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/bg_input_orange"
                    android:inputType="textUri"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/btn_url_clear"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:gravity="center"
                        android:text="ðŸ—‘"
                        android:textSize="22sp"
                        android:background="@drawable/bg_btn_icon"
                        android:focusable="true"
                        android:clickable="true"/>

                    <TextView
                        android:id="@+id/tv_ch_count_url"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/btn_url_next"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:gravity="center"
                        android:text="â­"
                        android:textSize="22sp"
                        android:background="@drawable/bg_btn_icon"
                        android:focusable="true"
                        android:clickable="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/bg_note_box">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="catatan:"
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="14dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masukkan URL playlist M3U IPTV Anda.\nPastikan link aktif dan bisa dibuka lewat internet.\n\nAplikasi ini tidak menyediakan playlist."
                        android:textColor="@color/text_desc"
                        android:textSize="12sp"
                        android:lineSpacingMultiplier="1.7"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- ===== PAGE NAME ===== -->
    <LinearLayout
        android:id="@+id/page_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@color/bg_card2">
            <TextView
                android:id="@+id/btn_name_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â† Kembali"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:focusable="true"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan\nnama playlist"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="right"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama playlist"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="playlist ku 1"
                    android:textColor="@color/bg_dark"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/bg_input_white"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/btn_name_clear"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:gravity="center"
                        android:text="ðŸ—‘"
                        android:textSize="22sp"
                        android:background="@drawable/bg_btn_icon"
                        android:focusable="true"
                        android:clickable="true"/>

                    <TextView
                        android:id="@+id/tv_ch_count_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/btn_name_save"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:gravity="center"
                        android:text="â­"
                        android:textSize="22sp"
                        android:background="@drawable/bg_btn_icon"
                        android:focusable="true"
                        android:clickable="true"/>
                </LinearLayout>

                <!-- Download on start radio -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download playlist on each start"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginBottom="18dp"/>

                <LinearLayout
                    android:id="@+id/radio_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:focusable="true"
                    android:clickable="true">
                    <View
                        android:id="@+id/radio_box_yes"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_checkbox_empty"
                        android:layout_marginRight="14dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textColor="@color/text_white"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/radio_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:focusable="true"
                    android:clickable="true">
                    <View
                        android:id="@+id/radio_box_no"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_checkbox_empty"
                        android:layout_marginRight="14dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="@color/text_white"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- ===== PAGE SETTINGS ===== -->
    <LinearLayout
        android:id="@+id/page_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@color/bg_card2">
            <TextView
                android:id="@+id/btn_settings_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â† Keluar"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:focusable="true"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_start_watch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai menonton"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/selector_settings_item"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider"/>

        <TextView
            android:id="@+id/btn_go_playlists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlists"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/selector_settings_item"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider"/>

        <TextView
            android:id="@+id/btn_add_playlist_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Tambah Playlist Baru"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/selector_settings_item"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="24dp"
            android:background="@drawable/bg_note_box">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="catatan:"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist sudah berhasil ditambahkan.\nSelamat menonton."
                android:textColor="@color/text_desc"
                android:textSize="12sp"
                android:lineSpacingMultiplier="1.7"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== PAGE PLAYLISTS ===== -->
    <LinearLayout
        android:id="@+id/page_playlists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@color/bg_card2">
            <TextView
                android:id="@+id/btn_playlists_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â† Kembali"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:focusable="true"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlists"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/playlist_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/divider">
            <TextView
                android:id="@+id/btn_update_playlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”„ Update Playlist"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/selector_settings_item"/>
            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/divider"/>
            <TextView
                android:id="@+id/btn_switch_playlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‡„ Ganti Playlist"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/selector_settings_item"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_update_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist telah diperbaharui"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- ===== LOADING OVERLAY ===== -->
    <LinearLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#d90a1628"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#3a7bd5"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mohon bersabar..."
            android:textColor="@color/text_white"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_loading_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_muted"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- ===== PLAYLIST SWITCHER MODAL ===== -->
    <LinearLayout
        android:id="@+id/switcher_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#b3000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/switcher_modal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Playlist"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="300dp">
                <LinearLayout
                    android:id="@+id/switcher_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </ScrollView>

            <TextView
                android:id="@+id/btn_switcher_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutup"
                android:textColor="@color/text_muted"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_search"
