<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:background="@color/bg_card2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PLAY M3U."
            android:textColor="@color/text_main"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_muted"
            android:textSize="12sp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”„"
            android:textColor="@color/text_main"
            android:textSize="20sp"
            android:paddingHorizontal="12dp"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/btn_add_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Playlist"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingHorizontal="12dp"
            android:focusable="true"
            android:clickable="true" />
    </LinearLayout>

    <!-- Playlist Tabs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_playlists"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="16dp"
        android:background="@color/bg_card"
        android:orientation="horizontal" />

    <!-- Group Filter -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_groups"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp"
        android:background="@color/bg_dark"
        android:orientation="horizontal" />

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressTint="@color/accent"
        android:indeterminate="true"
        android:visibility="gone" />

    <!-- Channel List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_channels"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Belum ada playlist.\nTambahkan playlist M3U Anda untuk mulai menonton."
        android:textColor="@color/text_muted"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
